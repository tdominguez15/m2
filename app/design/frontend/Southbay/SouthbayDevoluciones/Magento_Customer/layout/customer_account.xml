<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" label="Customer My Account (All Pages)" design_abstraction="custom">
    <head>
        <title>Devoluciones</title>
    </head>
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="devoluciones.nueva">
                <arguments>
                    <argument name="path" xsi:type="string">southbay_return_product/newreturn</argument>
                    <argument name="label" xsi:type="string">Nueva devolución</argument>
                    <argument name="sortOrder" xsi:type="number">1</argument>
                    <argument name="navigation" xsi:type="boolean">true</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="devoluciones">
                <arguments>
                    <argument name="path" xsi:type="string">southbay_return_product/myreturns</argument>
                    <argument name="label" xsi:type="string">Mis devoluciones</argument>
                    <argument name="sortOrder" xsi:type="number">2</argument>
                    <argument name="navigation" xsi:type="boolean">true</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="devoluciones.historial">
                <arguments>
                    <argument name="path" xsi:type="string">southbay_return_product/history</argument>
                    <argument name="label" xsi:type="string">Historial de devoluciones</argument>
                    <argument name="sortOrder" xsi:type="number">3</argument>
                    <argument name="navigation" xsi:type="boolean">true</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="devoluciones.dashboard">
                <arguments>
                    <argument name="path" xsi:type="string">southbay_return_product/dashboard</argument>
                    <argument name="label" xsi:type="string"  translate="false" >Dashboard</argument>
                    <argument name="sortOrder" xsi:type="number">4</argument>
                    <argument name="navigation" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </referenceBlock>
        <!--<move element="menu.devoluciones" destination="customer_account_navigation" after="customer-account-navigation-account-link"/>-->
    </body>
</page>
