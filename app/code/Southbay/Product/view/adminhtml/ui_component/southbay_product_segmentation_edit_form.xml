<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">southbay_product_segmentation_edit_form.form_data_source</item>
            <item name="deps" xsi:type="string">southbay_product_segmentation_edit_form.form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Editar Segmentacion</item>
        <item name="layout" xsi:type="array">
            <item name="type" xsi:type="string">tabs</item>
        </item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Magento\Customer\Block\Adminhtml\Edit\BackButton</item>
            <item name="save" xsi:type="string">Southbay\ReturnProduct\Block\Adminhtml\Action\SaveButton</item>
        </item>
    </argument>

    <dataSource name="form_data_source" component="Magento_Ui/js/form/provider">
        <settings>
            <submitUrl path="*/*/save"/>
            <validateUrl path="*/*/validate"/>
        </settings>
        <dataProvider name="form_data_source"
                      class="Southbay\Product\Model\ResourceModel\Segmentation\Datasource">
            <settings>
                <primaryFieldName>entity_id</primaryFieldName>
                <requestFieldName>id</requestFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="fields">
        <settings>
            <label translate="true">Detalle</label>
        </settings>

        <field name="entity_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <settings>
                <visible>false</visible>
            </settings>
        </field>


        <field name="code" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="style" xsi:type="string">max-width: 100px;</item>
                </item>
            </argument>
            <settings>
                <visible>true</visible>
                <disabled>false</disabled>
                <elementTmpl>ui/form/element/input</elementTmpl>
                <label translate="true">Codigo</label>
            </settings>
        </field>

        <field name="label" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="style" xsi:type="string">max-width: 100px;</item>
                </item>
            </argument>
            <settings>
                <visible>true</visible>
                <elementTmpl>ui/form/element/input</elementTmpl>
                <label translate="true">Label</label>
            </settings>
        </field>
    </fieldset>

</form>
