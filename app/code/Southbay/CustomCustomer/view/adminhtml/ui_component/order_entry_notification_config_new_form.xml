<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">order_entry_notification_config_new_form.form_data_source</item>
            <item name="deps" xsi:type="string">order_entry_notification_config_new_form.form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Nueva configuración</item>
        <item name="layout" xsi:type="array">
            <item name="type" xsi:type="string">tabs</item>
        </item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Magento\Customer\Block\Adminhtml\Edit\BackButton</item>
            <item name="save" xsi:type="string">Southbay\ReturnProduct\Block\Adminhtml\Action\SaveButton</item>
        </item>
    </argument>

    <dataSource name="form_data_source" component="Magento_Ui/js/form/provider">
        <settings>
            <submitUrl path="*/*/save"/>
            <validateUrl path="*/*/validate"/>
        </settings>
        <dataProvider name="form_data_source"
                      class="Southbay\CustomCustomer\Model\ResourceModel\OrderEntryNotificationConfig\Dataprovider">
            <settings>
                <primaryFieldName>entity_id</primaryFieldName>
                <requestFieldName>id</requestFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="fields">
        <settings>
            <label translate="true">Detalle</label>
        </settings>

        <field name="entity_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <settings>
                <visible>false</visible>
            </settings>
        </field>

        <field name="southbay_country_code" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/select</item>
                    <item name="label" xsi:type="string" translate="true">País</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <formElements>
                <select>
                    <settings>
                        <options
                            class="Southbay\ReturnProduct\Block\Adminhtml\Config\Form\CountryOptionsProvider"/>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="southbay_function_code" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/select</item>
                    <item name="label" xsi:type="string" translate="true">Funcionalidad</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <formElements>
                <select>
                    <settings>
                        <options
                            class="Southbay\CustomCustomer\Model\ResourceModel\ConfigStore\SouthbayFunctionOptionsDataProvider"/>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="magento_template_id" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/select</item>
                    <item name="label" xsi:type="string" translate="true">Template</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <formElements>
                <select>
                    <settings>
                        <options
                            class="Southbay\ReturnProduct\Block\Adminhtml\Config\Form\MagentoMailTemplateOptionsProvider"/>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="retry_after" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-number" xsi:type="boolean">true</item>
                        <item name="validate-digits" xsi:type="boolean">true</item>
                    </item>
                    <item name="style" xsi:type="string">max-width: 100px;</item>
                </item>
            </argument>
            <settings>
                <visible>true</visible>
                <elementTmpl>ui/form/element/input</elementTmpl>
                <label translate="true">Tiempo maximo para retransmitir (minutos)</label>
            </settings>
        </field>

    </fieldset>

</form>
